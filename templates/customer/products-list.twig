{% extends "container.twig" %}

{% block content %}
<div class="row">
    <div class="col-sm-9">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Serial Id</th>
                    <th>Product</th>
                    <th>Warranty</th>
                    <th>Info</th>
                    <th>Ticket</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.serialId }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.expired == true ? "Warranty has expired" : "Warramty can still be availed."}}</td>
                    {# link to product #}
                    <td><a href="/customer/products/{{ product.id }}" class="btn btn-info" role="button">Info</a></td>
                    {% if product.expired == false %}
                        <td><a href='/customer/products/{{ product.id }}' class='btn btn-info' role='button'>Submit Ticket</a></td>
                    {% elseif product.expired == true %}
                        <td></td>
                    {% endif %}

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock content %}