{% extends "container.twig" %}

{% block content %}
<div class="row">
    <div class="col-sm-6">
        <form action="/customer/action/register" method='POST'>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" maxlength="30" minlength="3" required>
            </div>
            <div class="form-group">
                <label for="surname">Surname</label>
                <input type="text" name="surname" class="form-control" maxlength="50" minlength="3" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="mob_no">Mobile No.</label>
                <input type="tel" name="mob_no" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="pwd">Password</label>
                <input type="password" name="password" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" name="confirm_password" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="form-control">
            </div>
        
        </form>
    </div>
    <div class="col-sm-6"></div>
</div>
{% endblock %}