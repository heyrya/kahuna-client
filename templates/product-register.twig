{% extends "container.twig" %}

{% block content %}
<div class="row">
    <div class="col-sm-6">
        <form action="/customer/action/register-product" method="POST">
            <div class="form-group">
                <label for="product_register">Product Registration</label>
                <select class="form-select form-control" name="product_register_id">
                    {% for product in products %}
                    <option value="{{product.id}}">Serial Id : {{product.serialId}} ---- {{product.name}} --- Warranty: {{product.warranty}} years</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Register Product" class="form-control">
            </div>
        </form>
    </div>
</div>
{% endblock %}